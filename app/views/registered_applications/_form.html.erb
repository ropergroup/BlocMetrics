
   <%= form_for [user, registered_application] do |f| %>
      <div class="form-group">
         <%= f.label :appname %>
         <%= f.text_field :appname, class: 'form-control', placeholder: "Enter Task" %>
         <%= f.number_field :url, class: 'form-control', placeholder: "Enter # of days until item expires", value: nil, required: true %>
      </div>
      <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
   <% end %>
