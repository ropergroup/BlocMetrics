<h4>Add an Application </h4>

   <%= form_for [user, registered_applications] do |f| %>
      <div class="form-group">
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter Task" %>
         <%= f.number_field :exp, class: 'form-control', placeholder: "Enter # of days until item expires", value: nil, required: true %>
      </div>
      <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
   <% end %>
