<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Site</th>
              <th>URL</th>
            </tr>
          </thead>

          <tbody>
          <tr class="site-list">
            <td><%= @registered_application.appname %> </td>
            <td><%= @registered_application.url %></td>
            <td><%= button_to "Delete", { :action => "destroy" }, :method => :delete %></td>
          </tr>
          <tr>
            <td><%= pie_chart @registered_application.events.group(:name).count %></td>
          </tr>
          <tr>
            <td><%= line_chart @registered_application.events.group_by_day(:created_at).count %></td>
          </tr>
          <tr class="site-list">
            <td> <%= render @registered_application.events %></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
