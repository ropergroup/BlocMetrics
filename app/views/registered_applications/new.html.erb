<h4>Add a application</h4>

   <%= form_for [user, registered_application] do |f| %>
      <div class="form-group">
         <%= f.label :appname %>
         <%= f.text_field :appname, class: 'form-control', placeholder: "Enter Application" %>
         <%= f.number_field :url, class: 'form-control', placeholder: "Enter URL", value: nil, required: true %>
      </div>
      <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
   <% end %>
