<h1>Registered Applications</h1>


<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th> Application Name </th>
        <th> URL</th>
      </tr>
    </thead>
    <tbody>
      <tr class='js-items'>
        <%= render @user.registered_applications %>
      </tr>
    </tbody>
  </table>
</div>

<% if current_user %>
  <%= render 'registered_applications/form', registered_applications: Registered_Application.new, user: @user %>
<% end %>
